<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_farm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginTop="79dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/login_activity_IDEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="69dp"
            android:background="@null"
            android:hint="아이디를 입력해주세요."
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:orientation="vertical" />

        <EditText
            android:id="@+id/login_activity_PasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:hint="비밀번호를 입력해주세요."
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:orientation="vertical" />

        <Button
            android:id="@+id/login_activity_LoginButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="19dp"
            android:background="#F2c712"
            android:gravity="center"
            android:text="로그인"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/login_activity_FindPasswd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호찾기"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:orientation="vertical" />
        </LinearLayout>

        <Button
            android:id="@+id/login_activity_JoinButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="42dp"
            android:background="#8d6252"
            android:gravity="center"
            android:text="회원 가입하기"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/login_activity_KAKAOJoinButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="11dp"
            android:background="#8d6252"
            android:gravity="center"
            android:text="카카오톡으로 가입하기"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>