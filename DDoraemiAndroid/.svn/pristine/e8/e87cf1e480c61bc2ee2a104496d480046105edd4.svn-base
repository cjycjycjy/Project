<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clickable="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:text="귀하의 성별을 선택해주세요."
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" >
        </TextView>

        <RadioGroup
            android:id="@+id/join_fragmenttwo_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/join_fragmenttwo_RadioMan"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginRight="29dp"
                android:button="@drawable/custom_manradio" />

            <RadioButton
                android:id="@+id/join_fragmenttwo_RadioWoman"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:button="@drawable/custom_womanradio" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="귀하의 연령대를 선택해주세요."
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" >
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/join_fragmenttwo_MinusBt"
                android:layout_width="34dp"
                android:layout_height="38dp"
                android:scaleType="fitXY"
                android:src="@drawable/btn_age_minus" />

            <FrameLayout
                android:layout_width="78dp"
                android:layout_height="38dp" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_age_middle" />

                <TextView
                    android:id="@+id/join_fragmenttwo_agetv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="35세"
                    android:textColor="#868585"
                    android:textSize="14sp" />
            </FrameLayout>

            <ImageView
                android:id="@+id/join_fragmenttwo_PlusBt"
                android:layout_width="34dp"
                android:layout_height="38dp"
                android:scaleType="fitXY"
                android:src="@drawable/btn_age_plus" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="귀하의 지역을 선택해주세요."
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" >
        </TextView>

        <LinearLayout
            android:id="@+id/join_fragmenttwo_addresslayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/join_fragmenttwo_city"
                android:layout_width="75dp"
                android:layout_height="21dp"
                android:background="@drawable/addressbox"
                android:gravity="center"
                android:text="시/도"
                android:textColor="#868585"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="11dp"
                android:layout_height="14dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/addressnext" />

            <TextView
                android:id="@+id/join_fragmenttwo_country"
                android:layout_width="75dp"
                android:layout_height="21dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/addressbox"
                android:gravity="center"
                android:text="구/군"
                android:textColor="#868585"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="11dp"
                android:layout_height="14dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/addressnext" />

            <TextView
                android:id="@+id/join_fragmenttwo_town"
                android:layout_width="75dp"
                android:layout_height="21dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/addressbox"
                android:gravity="center"
                android:text="읍/면/동"
                android:textColor="#868585"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/join_fragmenttwo_ButtonNext"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:background="#8d6252"
        android:gravity="center"
        android:text="다음 단계로 이동"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>