<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clickable="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:text="이 단계를 지나면\n 교과서에서 기반한 추천을 받을수 있습니다." 
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="71dp"
            android:text="자녀의 성별을 선택해주세요." 
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" >
        </TextView>
        <RadioGroup
            android:id="@+id/join_fragmenttwo_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/join_fragmenttwo_RadioMan"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginRight="29dp"
                android:button="@drawable/custom_boyradio" />

            <RadioButton
                android:id="@+id/join_fragmenttwo_RadioWoman"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:button="@drawable/custom_girlradio" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="자녀의 연령대를 선택해주세요."
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" >
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/join_fragmenttwo_MinusBt"
                android:layout_width="34dp"
                android:layout_height="38dp"
                android:scaleType="fitXY"
                android:src="@drawable/btn_age_minus" />

            <FrameLayout
                android:layout_width="78dp"
                android:layout_height="38dp" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_age_middle" />

                <TextView
                    android:id="@+id/join_fragmenttwo_agetv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="10세"
                    android:textColor="#868585"
                    android:textSize="14sp" />
            </FrameLayout>

            <ImageView
                android:id="@+id/join_fragmenttwo_PlusBt"
                android:layout_width="34dp"
                android:layout_height="38dp"
                android:scaleType="fitXY"
                android:src="@drawable/btn_age_plus" />
        </LinearLayout>

           </LinearLayout>

    <TextView
        android:id="@+id/join_fragmenttwo_ButtonNext"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:background="#8d6252"
        android:gravity="center"
        android:text="다음 단계로 이동"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>