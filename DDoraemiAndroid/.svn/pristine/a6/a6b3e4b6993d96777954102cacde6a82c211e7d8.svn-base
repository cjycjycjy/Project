<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:background="@drawable/box_write"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp" >

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/item_mypage_joininggroup_profileIMG"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_user_profile" />

            <ImageView
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:src="@drawable/circle_yellow" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="115dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_mypage_joininggroup_programname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="z"
                android:textColor="#000000"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/item_mypage_joininggroup_groupname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="z"
                android:textColor="#474747"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_mypage_joininggroup_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="z"
                android:textColor="#474747"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_mypage_joininggroup_countcurpersons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="z"
                android:textColor="#ffcc00"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>