<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clickable="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:text="귀하의 성별을 선택해주세요."
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" >
        </TextView>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/join_fragment_RadioMan"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginRight="29dp"
                android:button="@drawable/custom_manradio" />

            <RadioButton
                android:id="@+id/join_fragment_RadioWoman"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:button="@drawable/custom_womanradio" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="귀하의 연령대를 선택해주세요."
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" >
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35세"
                android:textColor="#868585"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="귀하의 지역을 선택해주세요."
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" >
        </TextView>

        <LinearLayout
            android:id="@+id/join_fragmenttwo_addresslayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:background="#FFCC00"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/join_fragmenttwo_ButtonNext"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:background="#8d6252"
        android:gravity="center"
        android:text="다음 단계로 이동"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>