<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/fragment_detailedgroupinfo_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_height" />

            <LinearLayout
                android:id="@+id/layout_gotoiteminfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/fragment_detailedgroupinfo_tv_challenge_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="풍년벼수확체험"
                    android:textColor="#795548"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/img_group_challengeinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/btn_gotochallenge" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_groupname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="초딩엄마모여라"
                android:textColor="#474747"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/fragment_detailedgroupinfo_tv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="19dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="18dp"
                android:background="#e1e1e1" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/fragment_detailedgroupinfo_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="체험날짜"
                    android:textColor="#838486"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/fragment_detailedgroupinfo_tv_dateinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:gravity="right"
                    android:text="sdfsdf"
                    android:textColor="#474747"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_map"
                android:layout_width="fill_parent"
                android:layout_height="195dp"
                android:layout_marginTop="18dp"
                android:background="@android:color/black"
                android:paddingTop="1dip" >

                <RelativeLayout
                    android:id="@+id/infomap_menulayout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="17dp" >

                    <TextView
                        android:id="@+id/TvAddressOntheMAP"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:textColor="#474747"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/goToBigTmap"
                        android:layout_width="81dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/btn_bigger" />
                </RelativeLayout>
            </RelativeLayout>

        

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_personinfobtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="참여자"
                    android:textColor="#838486"
                    android:textSize="14sp" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/fragment_detailedgroupinfo_joinpersonpager"
                    android:layout_width="197dp"
                    android:layout_height="44dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp" />

                <TextView
                    android:id="@+id/tv_personcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tv_personinfobtn"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/fragment_detailedgroupinfo_moreparticipant"
                    android:layout_width="3dp"
                    android:layout_height="4dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="9dp"
                    android:src="@drawable/moreparticipant" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e1e1e1" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="모집 인원"
                    android:textColor="#838486"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/fragment_detailedgroupinfo_persons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:gravity="right"
                    android:text="모집인원"
                    android:textColor="#838486"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e1e1e1" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="가격"
                    android:textColor="#838486"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/fragment_detailedgroupinfo_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:gravity="right"
                    android:text="가격"
                    android:textColor="#838486"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e1e1e1" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="준비물"
                    android:textColor="#838486"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/fragment_detailedgroupinfo_supplies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:gravity="right"
                    android:text="준비물"
                    android:textColor="#838486"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e1e1e1" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/iv_joingroup"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_bottom" />

</LinearLayout>