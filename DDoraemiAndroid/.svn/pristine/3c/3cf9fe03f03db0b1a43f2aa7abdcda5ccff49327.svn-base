<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FFCC00" >

            <ImageView
                android:id="@+id/activity_writeafterword_back"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/normal_horizontal_margin"
                android:scaleType="fitXY"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:text="후기 작성"
                android:textColor="#ffffff"
                android:textSize="19sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/activity_writeafterword_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/normal_horizontal_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/btn_save" />
        </RelativeLayout>

        <TextView
            android:id="@+id/activity_writeafterword_PnameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="체험이름 "
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/activity_writeafterword_PaddrTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="체험주소 "
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/activity_writeafterword_PtimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="체험 시간 "
            android:textColor="#000000"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="#bfbfbf" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp" >

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star_stroke" />

                <ImageView
                    android:id="@+id/activity_writeafterword_star1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star_fill"
                    android:visibility="gone" >
                </ImageView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp" >

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star_stroke" />

                <ImageView
                    android:id="@+id/activity_writeafterword_star2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star_fill"
                    android:visibility="gone" >
                </ImageView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp" >

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star_stroke" />

                <ImageView
                    android:id="@+id/activity_writeafterword_star3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star_fill"
                    android:visibility="gone" >
                </ImageView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp" >

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star_stroke" />

                <ImageView
                    android:id="@+id/activity_writeafterword_star4"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star_fill"
                    android:visibility="gone" >
                </ImageView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp" >

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star_stroke" />

                <ImageView
                    android:id="@+id/activity_writeafterword_star5"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star_fill"
                    android:visibility="gone" >
                </ImageView>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#bfbfbf" />

        <EditText
            android:id="@+id/activity_writeafterword_edit"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#FFFFFF"
            android:gravity="top"
            android:hint="이 체험은 어땠나요?"
            android:paddingLeft="21dp"
            android:paddingTop="18dp"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bfbfbf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사진 "
                    android:textColor="#000000"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="0"
                    android:textColor="#ffcc00"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/3 "
                    android:textColor="#000000"
                    android:textSize="11sp" />
            </LinearLayout>

            <GridView
                android:id="@+id/activity_writeafterword_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:columnWidth="64dp"
                android:horizontalSpacing="4dp"
                android:layout_marginBottom="5dp" >
            </GridView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bfbfbf" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/activity_writeafterword_pic"
                android:layout_width="82dp"
                android:layout_height="31dp"
                android:src="@drawable/btn_photo" />

            <ImageView
                android:id="@+id/activity_writeafterword_video"
                android:layout_width="82dp"
                android:layout_height="31dp"
                android:layout_marginLeft="33dp"
                android:src="@drawable/btn_video" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>