<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clickable="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:text="자녀의 성별을 선택해주세요."
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" >
        </TextView>

        <RadioGroup
            android:id="@+id/join_fragmentthree_SexRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/join_fragmentthree_RadioBoy"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginRight="29dp"
                android:button="@drawable/custom_boyradio" />

            <RadioButton
                android:id="@+id/join_fragmentthree_RadioGirl"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:button="@drawable/custom_girlradio" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="자녀의 연령대를 선택해주세요."
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" >
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/join_fragmentthree_MinusBt"
                android:layout_width="34dp"
                android:layout_height="38dp"
                android:scaleType="fitXY"
                android:src="@drawable/btn_age_minus" />

            <FrameLayout
                android:layout_width="78dp"
                android:layout_height="38dp" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_age_middle" />

                <TextView
                    android:id="@+id/join_fragmentthree_agetv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="10세"
                    android:textColor="#868585"
                    android:textSize="14sp" />
            </FrameLayout>

            <ImageView
                android:id="@+id/join_fragmentthree_PlusBt"
                android:layout_width="34dp"
                android:layout_height="38dp"
                android:scaleType="fitXY"
                android:src="@drawable/btn_age_plus" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="선호 체험 유형 2개를 선택해주세요."
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" >
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ToggleButton
                        android:id="@+id/join_fragmentthree_tranditionalfood"
                        android:layout_width="49dp"
                        android:layout_height="49dp"
                        android:background="@drawable/selector_tranditionalfood"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전통음식체험"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ToggleButton
                        android:id="@+id/join_fragmentthree_planting"
                        android:layout_width="49dp"
                        android:layout_height="49dp"
                        android:background="@drawable/selector_planting"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="경작체험"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ToggleButton
                        android:id="@+id/join_fragmentthree_harvest"
                        android:layout_width="49dp"
                        android:layout_height="49dp"
                        android:background="@drawable/selector_harvest"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수확체험"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ToggleButton
                        android:id="@+id/join_fragmentthree_tranditionalplay"
                        android:layout_width="49dp"
                        android:layout_height="49dp"
                        android:background="@drawable/selector_tranditionalplay"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전통놀이체험"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ToggleButton
                        android:id="@+id/join_fragmentthree_cooking"
                        android:layout_width="49dp"
                        android:layout_height="49dp"
                        android:background="@drawable/selector_cooking"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="요리체험"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ToggleButton
                        android:id="@+id/join_fragmentthree_craft"
                        android:layout_width="49dp"
                        android:layout_height="49dp"
                        android:background="@drawable/selector_craft"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="공예체험"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ToggleButton
                        android:id="@+id/join_fragmentthree_culture"
                        android:layout_width="49dp"
                        android:layout_height="49dp"
                        android:background="@drawable/selector_culture"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="문화체험"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ToggleButton
                        android:id="@+id/join_fragmentthree_nature"
                        android:layout_width="49dp"
                        android:layout_height="49dp"
                        android:background="@drawable/selector_nature"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전통놀이체험"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/join_fragmentThree_ButtonNext"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:background="#8d6252"
        android:gravity="center"
        android:text="가입완료"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>