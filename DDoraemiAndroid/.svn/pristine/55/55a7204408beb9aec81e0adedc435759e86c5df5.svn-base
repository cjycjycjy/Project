<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="129sp"
    android:orientation="horizontal"
    android:background="#ffffff" >
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/challenge_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_user" />

        <TextView
            android:id="@+id/tv_qna_u_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="nancy717" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

          <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp" >

            <TextView
                android:id="@+id/tv_qna_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2015.08.12"
               
                 />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_qna_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:text="직접 벼를 베어보니 아이가 정말 재미있어 했어요. 교과과정과 이어지니 훨씬 학습에도 도움이 되는거 같구요. 정말 좋았어요. 추천합니다."
            android:textColor="#000000"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp" >

            <TextView
                android:id="@+id/tv_qna_add_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="7dp"
                android:text="댓글달기"
                android:textColor="#000000"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/modifydelete"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/btn_modifydelete" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
