<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="292dp"
    android:layout_height="wrap_content"
    android:background="#e5e5e5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFCC00"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/dialog_groupdateselect_prev"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/btn_lastmonth" />
        </LinearLayout>

        <TextView
            android:id="@+id/dialog_groupdateselect_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015년 5월"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/dialog_groupdateselect_next"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/btn_nextmonth" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="405dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="4dp"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="일"
                    android:textColor="#d4a3a3"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="월"
                    android:textColor="#a3a3a3"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="화"
                    android:textColor="#a3a3a3"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="수"
                    android:textColor="#a3a3a3"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="목"
                    android:textColor="#a3a3a3"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="금"
                    android:textColor="#a3a3a3"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="토"
                    android:textColor="#d4a3a3"
                    android:textSize="13sp" />
            </LinearLayout>

            <GridView
                android:listSelector="#ffffff"
                android:id="@+id/dialog_groupdateselect_gridview"
                android:layout_width="match_parent"
                android:layout_height="234dp"
                android:layout_marginTop="4dp"
                android:background="#FFFFFF"
                android:numColumns="7"
                android:scrollbars="none" >
            </GridView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="진하게 표시된 날짜"
                    android:textColor="#000000"
                    android:textSize="11sp" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="에만 모임을 개설할 수 있습니다."
                    android:textColor="#a3a3a3"
                    android:textSize="11sp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_marginTop="2dp"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:text="시작시간"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/dialog_groupdateselect_AMorPMup"
                        android:layout_width="19dp"
                        android:layout_height="11dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/btn_timeup" />

                    <TextView
                            android:id="@+id/dialog_groupdateselect_AMPM"
                        android:layout_width="43dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_selecttime"
                        android:gravity="center"
                        android:text="오후"
                        android:textColor="#a0a0a0"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/dialog_groupdateselect_AMorPMdown"
                        android:layout_width="19dp"
                        android:layout_height="11dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/btn_timedown" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/dialog_groupdateselect_Hourup"
                        android:layout_width="19dp"
                        android:layout_height="11dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/btn_timeup" />

                    <LinearLayout
                        android:layout_width="43dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_selecttime"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/dialog_groupdateselect_Edit_Hour"
                            android:maxLength="2"
                            android:background="@null"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="#a0a0a0"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:text="시"
                            android:textColor="#000000"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/dialog_groupdateselect_Hourdown"
                        android:layout_width="19dp"
                        android:layout_height="11dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/btn_timedown" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/dialog_groupdateselect_Minup"
                        android:layout_width="19dp"
                        android:layout_height="11dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/btn_timeup" />

                    <LinearLayout
                        android:layout_width="43dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_selecttime"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/dialog_groupdateselect_Edit_min"
                            android:maxLength="2"
                            android:background="@null"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:gravity="center"
                            android:text="30"
                            android:textColor="#a0a0a0"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:text="분"
                            android:textColor="#000000"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/dialog_groupdateselect_Mindown"
                        android:layout_width="19dp"
                        android:layout_height="11dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/btn_timedown" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/dialog_groupdateselect_Plusbt"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/icon_plus" />
            </LinearLayout>

            <ListView
                android:background="#FFFFFF"
                android:id="@+id/dialog_groupdateselect_listview"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:layout_marginTop="5dp"
                android:divider="#ffcc00"
                android:dividerHeight="1dp" >
            </ListView>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/dialog_groupdateselect_ok"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_popup_ok" />

</LinearLayout>