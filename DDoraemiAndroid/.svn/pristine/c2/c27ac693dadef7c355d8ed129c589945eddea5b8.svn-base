<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:paddingBottom="14dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"

        android:layout_marginTop="17dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_afterword_commentline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/commentline" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="48dp" >

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/iv_afterword_reply_u_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_user" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    
                    android:scaleType="fitXY"
                    android:src="@drawable/circle_yellow" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_afterword_reply_u_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp" >

            <TextView
                android:id="@+id/tv_afterword_reply_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2015.08.12" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_afterword_reply_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:textColor="#000000"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp" >

            <ImageView
                    android:id="@+id/modifydelete"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/btn_modifydelete"
                    />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>