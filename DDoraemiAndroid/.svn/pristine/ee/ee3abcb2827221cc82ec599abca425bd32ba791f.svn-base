<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_selectlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="23dip"
        android:text="체험을 원하는 지역을 선택하세요."
        android:textColor="#000000"
        android:textSize="19sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:layout_width="99sp"
            android:layout_height="113sp"
            android:layout_marginLeft="80dip"
            android:layout_marginTop="115dip"
            android:background="@drawable/img_seoul" />

        <Button
            android:layout_width="151sp"
            android:layout_height="117sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="75dip"
            android:layout_marginTop="97dip"
            android:background="@drawable/img_gangwon" />

        <Button
            android:layout_width="167sp"
            android:layout_height="106sp"
            android:layout_marginLeft="64dip"
            android:layout_marginTop="201dip"
            android:background="@drawable/img_chungcheong" />

        <Button
            android:layout_width="138sp"
            android:layout_height="209sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="139dip"
            android:layout_marginRight="57dip"
            android:background="@drawable/img_kyungsang" />

        <Button
            android:layout_width="125sp"
            android:layout_height="155sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="107dip"
            android:layout_marginLeft="57dip"
            android:background="@drawable/img_jeonla" />

        <Button
            android:layout_width="52sp"
            android:layout_height="27sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="49dip"
            android:layout_marginLeft="60dip"
            android:background="@drawable/img_jeju" />
    </RelativeLayout>

</LinearLayout>