<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="328dp"
    android:layout_height="586dp"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="지역설정"
        android:textColor="#000000"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_weight="1"
            android:layout_width="109dp"
            android:layout_height="33dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/tab_address" />

            <ImageView
                android:id="@+id/dialog_addressselect_cityimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/tab_addressactive" >
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="시/도"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_weight="1"
            android:layout_width="109dp"
            android:layout_height="33dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/tab_address" />

            <ImageView
                android:id="@+id/dialog_addressselect_countryimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/tab_addressactive"
                android:visibility="invisible" >
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="구/군"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_weight="1"
            android:layout_width="109dp"
            android:layout_height="33dp" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/tab_address" />

            <ImageView
                android:id="@+id/dialog_addressselect_townimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/tab_addressactive"
                android:visibility="invisible" >
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="읍/면/동"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </FrameLayout>
    </LinearLayout>

    <GridView
        android:id="@+id/dialog_address_LocationGrid"
        android:layout_width="match_parent"
        android:layout_height="415dp"
        android:numColumns="3" >
    </GridView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dialog_address_cancel"
            android:layout_width="82dp"
            android:layout_height="31dp"
            android:src="@drawable/btn_cancel" />

        <ImageView
            android:id="@+id/dialog_address_ok"
            android:layout_width="82dp"
            android:layout_height="31dp"
            android:layout_marginLeft="32dp"
            android:src="@drawable/btn_ok" />
    </LinearLayout>

</LinearLayout>