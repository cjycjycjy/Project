<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:paddingBottom="17dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="12dp" >

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/challenge_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_user" />

            <ImageView
                android:scaleType="fitXY"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/circle_yellow" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="17dp"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="58dp"
                android:layout_height="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/star_fill_img1"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="1dp"
                        android:src="@drawable/star_fill" />

                    <ImageView
                        android:id="@+id/star_fill_img2"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:src="@drawable/star_fill" />

                    <ImageView
                        android:id="@+id/star_fill_img3"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:src="@drawable/star_fill" />

                    <ImageView
                        android:id="@+id/star_fill_img4"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:src="@drawable/star_fill" />

                    <ImageView
                        android:id="@+id/star_fill_img5"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="1dp"
                        android:src="@drawable/star_fill" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/star_stroke_img1"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="1dp"
                        android:src="@drawable/star_stroke" />

                    <ImageView
                        android:id="@+id/star_stroke_img2"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:src="@drawable/star_stroke" />

                    <ImageView
                        android:id="@+id/star_stroke_img3"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:src="@drawable/star_stroke" />

                    <ImageView
                        android:id="@+id/star_stroke_img4"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:src="@drawable/star_stroke" />

                    <ImageView
                        android:id="@+id/star_stroke_img5"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="1dp"
                        android:src="@drawable/star_stroke" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:layout_marginTop="9dp"
                android:id="@+id/challenge_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="풍년벼수확체험"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:layout_marginTop="7dp"
                android:id="@+id/challenge_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경기도 연천군 청산면 궁평리"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:layout_marginTop="7dp"
                android:id="@+id/challenge_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000원"
                android:textColor="#000000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/education"
                    android:layout_width="51dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_education" />

                <ImageView
                    android:id="@+id/preference"
                    android:layout_width="51dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_preference" />

                <ImageView
                    android:id="@+id/distance"
                    android:layout_width="30dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_distance" />

                <ImageView
                    android:id="@+id/season"
                    android:layout_width="30dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_season" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>