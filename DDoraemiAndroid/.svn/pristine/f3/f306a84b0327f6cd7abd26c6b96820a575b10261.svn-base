<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clickable="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:text="자녀의 성별을 선택해주세요."
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" >
        </TextView>

        <RadioGroup
            android:id="@+id/join_fragmentthree_SexRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/join_fragmentthree_RadioBoy"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginRight="29dp"
                android:button="@drawable/custom_boyradio" />

            <RadioButton
                android:id="@+id/join_fragmentthree_RadioGirl"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:button="@drawable/custom_girlradio" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="자녀의 연령대를 선택해주세요."
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" >
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35세"
                android:textColor="#868585"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="선호 체험 유형 2개를 선택해주세요."
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" >
        </TextView>

    </LinearLayout>

    <Button
        android:id="@+id/join_fragmentThree_ButtonNext"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:background="#8d6252"
        android:gravity="center"
        android:text="가입완료"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>