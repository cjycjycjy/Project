<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="287dp"
    android:layout_height="236dp"
    android:background="@drawable/popupbox"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="선호 체험 유형 수정(2개선택)"
        android:layout_marginTop="22dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dialog_changefavorite_traditionalfood"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/traditional_food_icon" />

        <ImageView
            android:id="@+id/dialog_changefavorite_planting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="22dp"
            android:src="@drawable/planting_icon" />

        <ImageView
            android:id="@+id/dialog_changefavorite_havest"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="23dp"
            android:src="@drawable/harvest_icon" />

        <ImageView
            android:id="@+id/dialog_changefavorite_traditionalplay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="22dp"
            android:src="@drawable/traditional_play_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전통음식체험"
            android:textColor="#000000"
            android:textSize="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text="경작체험"
            android:textColor="#000000"
            android:textSize="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="수확체험"
            android:textColor="#000000"
            android:textSize="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text="전통놀이체험"
            android:textColor="#000000"
            android:textSize="11dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dialog_changefavorite_cooking"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cooking_icon" />

        <ImageView
            android:id="@+id/dialog_changefavorite_craft"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="22dp"
            android:src="@drawable/craft_icon" />

        <ImageView
            android:id="@+id/dialog_changefavorite_culture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="23dp"
            android:src="@drawable/culture_icon" />

        <ImageView
            android:id="@+id/dialog_changefavorite_nature"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="22dp"
            android:src="@drawable/nature_icon" />
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="요리체험"
            android:textColor="#000000"
            android:layout_marginLeft="15dp"
            android:textSize="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="공예체험"
            android:textColor="#000000"
            android:textSize="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:text="문화체험"
            android:textColor="#000000"
            android:textSize="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="자연체험"
            android:textColor="#000000"
            android:textSize="11dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/btn_dialog_confirmjoin_cancel"
            android:layout_width="77dp"
            android:layout_height="32dp"
            android:src="@drawable/btn_cancel" />

        <ImageView
            android:id="@+id/btn_dialog_confirmjoin_ok"
            android:layout_width="77dp"
            android:layout_height="32dp"
            android:layout_marginLeft="11dp"
            android:src="@drawable/btn_ok" />
    </LinearLayout>

</LinearLayout>