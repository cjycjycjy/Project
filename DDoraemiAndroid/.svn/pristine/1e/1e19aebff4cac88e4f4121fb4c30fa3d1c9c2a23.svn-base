<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/lv_group_qna"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/rl_inputqna"
            android:scrollbars="none" >
        </ListView>

        <RelativeLayout
            android:id="@+id/rl_inputqna"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <ImageView
                android:id="@+id/iv_inputqna_user"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_user" />

            <ImageView
                android:id="@+id/btn_inputqna"
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@drawable/btn_commentsave" />

            <EditText
                android:id="@+id/et_inputqna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/btn_inputqna"
                android:layout_toRightOf="@+id/iv_inputqna_user" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>