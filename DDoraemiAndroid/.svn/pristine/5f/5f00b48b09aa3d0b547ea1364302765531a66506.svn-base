<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="129sp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/challenge_img"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginLeft="18sp"
        android:layout_marginRight="8sp"
        android:layout_marginTop="12sp"
        android:src="@drawable/icon_user"/>

    <LinearLayout
        android:layout_width="200sp"
        android:layout_height="94sp"
        android:layout_marginBottom="18sp"
        android:layout_marginLeft="8sp"
        android:layout_marginTop="17sp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/challenge_name"
            android:layout_marginBottom="11sp"
            android:text="풍년벼수확체험"
            android:textColor="#000000"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:id="@+id/challenge_title"
            android:layout_marginBottom="7sp"
            android:text="초등엄마 모여라!"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/challenge_time"
            android:layout_marginBottom="7sp"
            android:text="2015.07.22 오후 1시 - 오후3시"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/challenge_place"
            android:layout_marginBottom="7sp"
            android:text="경기도 연천군 청산면 궁평리"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/challenge_attend"
            android:text="3명참석"
            android:textColor="#FFCC00"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/challenge_dday"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:text="D-3"
        android:textColor="#474747"
        android:textSize="14sp" />

</LinearLayout>