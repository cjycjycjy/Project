<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="287dp"
    android:layout_height="236dp"
    android:background="@drawable/popupbox"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="left"
        android:text="선호 체험 유형 수정"
        android:textColor="#000000"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ToggleButton
                    android:id="@+id/join_fragmentthree_tranditionalfood"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/selector_tranditionalfood"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전통음식체험"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ToggleButton
                    android:id="@+id/join_fragmentthree_planting"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/selector_planting"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경작체험"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ToggleButton
                    android:id="@+id/join_fragmentthree_harvest"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/selector_harvest"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수확체험"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ToggleButton
                    android:id="@+id/join_fragmentthree_tranditionalplay"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/selector_tranditionalplay"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전통놀이체험"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ToggleButton
                    android:id="@+id/join_fragmentthree_cooking"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/selector_cooking"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="요리체험"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ToggleButton
                    android:id="@+id/join_fragmentthree_craft"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/selector_craft"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공예체험"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ToggleButton
                    android:id="@+id/join_fragmentthree_culture"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/selector_culture"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="문화체험"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ToggleButton
                    android:id="@+id/join_fragmentthree_nature"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/selector_nature"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자연체험"
                    android:textColor="#000000"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/btn_dialog_confirmcancel_cancel"
            android:layout_width="77dp"
            android:layout_height="32dp"
            android:src="@drawable/btn_cancel" />
        
        <ImageView
            android:id="@+id/btn_dialog_confirmcancel_ok"
            android:layout_width="77dp"
            android:layout_height="32dp"
            android:layout_marginLeft="11dp"
            android:src="@drawable/btn_ok" />
    </LinearLayout>

</LinearLayout>