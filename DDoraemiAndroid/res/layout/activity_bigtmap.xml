<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFCC00" >

        <ImageView
            android:id="@+id/activity_bigtmap_btn_back"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/normal_horizontal_margin"
            android:scaleType="fitXY"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_titlebars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:text="지도 정보"
            android:textColor="#ffffff"
            android:textSize="19sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/normal_horizontal_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_bigtmap"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/activity_bigtmap_menu"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/activity_bigtmap_mylocation"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_mylocation" />

            <TextView
                android:id="@+id/activity_bigtmap_TvAddressOntheMAP"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="6dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:textColor="#474747"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>