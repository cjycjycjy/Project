<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="17dp" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp" >

            <ImageView
                android:id="@+id/challenge_img"
                android:layout_width="91dp"
                android:layout_height="91dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_user" />

            <ImageView
                android:layout_width="91dp"
                android:layout_height="91dp"
                android:scaleType="fitXY"
                android:src="@drawable/circle_yellow" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/challenge_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="풍년벼수확체험"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/challenge_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="향토 체험"
                android:textColor="#474747"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/challenge_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="경기도 연천군 청산면 궁평리"
                android:textColor="#474747"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 평점"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/challenge_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="0.0점"
                    android:textColor="#ffcc00"
                    android:textSize="14sp" />

                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="14dp"
                    android:paddingLeft="7dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/star_fill_img1"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginRight="1dp"
                            android:src="@drawable/star_fill" />

                        <ImageView
                            android:id="@+id/star_fill_img2"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:src="@drawable/star_fill" />

                        <ImageView
                            android:id="@+id/star_fill_img3"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:src="@drawable/star_fill" />

                        <ImageView
                            android:id="@+id/star_fill_img4"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:src="@drawable/star_fill" />

                        <ImageView
                            android:id="@+id/star_fill_img5"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="1dp"
                            android:src="@drawable/star_fill" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/star_stroke_img1"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginRight="1dp"
                            android:src="@drawable/star_stroke" />

                        <ImageView
                            android:id="@+id/star_stroke_img2"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:src="@drawable/star_stroke" />

                        <ImageView
                            android:id="@+id/star_stroke_img3"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:src="@drawable/star_stroke" />

                        <ImageView
                            android:id="@+id/star_stroke_img4"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:src="@drawable/star_stroke" />

                        <ImageView
                            android:id="@+id/star_stroke_img5"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="1dp"
                            android:src="@drawable/star_stroke" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/bookmark"
        android:layout_width="17dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:layout_marginRight="11dp"
        android:src="@drawable/icon_bookmark" />

</RelativeLayout>