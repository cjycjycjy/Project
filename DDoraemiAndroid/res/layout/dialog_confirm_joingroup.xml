<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="287dp"
    android:layout_height="159dp"
    android:background="@drawable/popupbox"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:gravity="left"
        android:text="다음 모임을 신청 하시겠습니까?"
        android:textColor="#000000"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tv_joindialog_p_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="9dp"
        android:text="[체험이름]"
        android:textColor="#474747"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tv_joindialog_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="3dp"
        android:text="몇월 몇일 언제"
        android:textColor="#474747"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/btn_dialog_confirmjoin_cancel"
            android:layout_width="77dp"
            android:layout_height="32dp"
            android:src="@drawable/btn_cancel" />

        <ImageView
            android:id="@+id/btn_dialog_confirmjoin_ok"
            android:layout_width="77dp"
            android:layout_height="32dp"
            android:layout_marginLeft="11dp"
            android:src="@drawable/btn_ok" />
    </LinearLayout>

</LinearLayout>