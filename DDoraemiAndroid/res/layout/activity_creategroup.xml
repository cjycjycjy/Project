<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFCC00" >

        <ImageView
            android:id="@+id/btn_left_menu"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/normal_horizontal_margin"
            android:scaleType="fitXY"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_creategroup_titlebars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:text="모임 만들기"
            android:textColor="#ffffff"
            android:textSize="19sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/activity_creategroup_Tv_ChallengeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="39dp"
                    android:text="asdasdasd"
                    android:textColor="#474747"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/activity_creategroup_Tv_Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_creategroup_Tv_ChallengeName"
                    android:layout_gravity="center"
                    android:layout_marginTop="11dp"
                    android:text="주소주소주소주소주소"
                    android:textColor="#474747"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="37dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dip"
                        android:text="모임제목"
                        android:textColor="#474747"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/activity_creategroup_Edit_Groupname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="모임제목을 입력하세요."
                        android:singleLine="true"
                        android:textColor="#9b9b9b"
                        android:textColorHint="#9b9b9b"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:background="#a0a0a0" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dip"
                        android:text="체험일"
                        android:textColor="#474747"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/activity_creategroup_Tv_date_select"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="체험일을 선택해 주세요."
                        android:textColor="#9b9b9b"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:background="#a0a0a0" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="18dp" >

                    <TextView
                        android:id="@+id/activity_creategroup_Tv_date_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#9b9b9b"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모집종료일"
                        android:textColor="#474747"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="체험일로부터 일주일 전에 모집이 종료됩니다."
                        android:textColor="#9b9b9b"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:background="#a0a0a0" >
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="72dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="37dp"
                        android:text="희망 인원"
                        android:textColor="#474747"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/layout_persons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" >

                        <FrameLayout
                            android:layout_width="49dp"
                            android:layout_height="40dp" >

                            <ImageView
                                android:id="@+id/activity_creategroup_persons_minusdisable"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/countpeople_minus_gray" />

                            <ImageView
                                android:id="@+id/activity_creategroup_persons_minus"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/number_box_minus"
                                android:visibility="gone" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="111dp"
                            android:layout_height="40dp" >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/number_box_middle" />

                            <TextView
                                android:id="@+id/activity_creategroup_minpersons_creategroup"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="1명"
                                android:textColor="#474747"
                                android:textSize="14sp" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="49dp"
                            android:layout_height="40dp" >

                            <ImageView
                                android:id="@+id/activity_creategroup_persons_plusdisable"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/countpeople_plus_gray" />

                            <ImageView
                                android:id="@+id/activity_creategroup_persons_plus"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/number_box_plus" />
                        </FrameLayout>
                    </LinearLayout>
                    <TextView 
                        android:id="@+id/tv_max_min_persons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_persons"
                        android:layout_alignParentRight="true"
                        android:text="최대최소"
                        android:textSize="10sp"
                        android:textColor="#9b9b9b"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#a0a0a0" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dip" >

                    <EditText
                        android:id="@+id/activity_creategroup_Edit_introduce"
                        android:layout_width="match_parent"
                        android:layout_height="171dp"
                        android:background="@drawable/textview_opengroup"
                        android:gravity="top"
                        android:hint="인사말을 입력해주세요."
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp"
                        android:paddingTop="14dp"
                        android:textColor="#474747"
                        android:textColorHint="#9b9b9b"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/activity_creategroup_Btn_Create"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="37dp"
                android:background="@drawable/btn_open" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>