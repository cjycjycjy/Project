<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50000000" >
    
    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="20dip"
        android:text="핸드폰 번호와 가입시 입력한 이메일 주소를 입력하시면 그 주소로 비밀번호가 발송됩니다." />

    <EditText
        android:id="@+id/et_phoneNum_find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="20dip"
        android:background="@drawable/editbox"
        android:hint="휴대폰 번호를 입력해 주세요."
        android:textColor="#000000"
        android:textSize="15dip" />
    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_phoneNum_find"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="20dip"
        android:background="@drawable/editbox"
        android:hint="가입시 입력한 메일 주소를 입력하세요."
        android:textColor="#000000"
        android:textSize="15dip" />

    <RelativeLayout
        android:id="@+id/rl_line_row"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/et_email"
        android:background="#FFFFFF" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_line_row" >

        <Button
            android:id="@+id/btn_sendpasswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/rl_line_col"
            android:background="@drawable/button_custom_dialog"
            android:text="확인"
            android:textColor="#FFFFFF"
            android:textSize="15dip" />

        <RelativeLayout
            android:id="@+id/rl_line_col"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/btn_sendpasswd"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF" >
        </RelativeLayout>

        <Button
            android:id="@+id/btn_send_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rl_line_col"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_custom_dialog"
            android:text="취소"
            android:textColor="#FFFFFF"
            android:textSize="15dip" />
    </RelativeLayout>

</RelativeLayout>
