<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/witchhunter" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
       >

       <ImageView
           android:layout_width="200dp"
           android:layout_height="200dp"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           android:background="@drawable/maintext" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dip"
        android:background="@drawable/layout_round_corner"
        android:padding="10dip" >

        <Button
            android:id="@+id/btn_join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:background="@drawable/button_round_corner"
            android:text="계정 생성"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_changeinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_join"
            android:layout_marginBottom="10dip"
            android:background="@drawable/button_round_corner"
            android:text="개인정보변경"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_changeinfo"
            android:layout_marginBottom="10dip"
            android:background="@drawable/button_round_corner"
            android:text="로그인"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_serviceon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:background="@drawable/button_round_corner"
            android:text="서비스 ON"
            android:layout_marginBottom="10dip"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_serviceoff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:background="@drawable/button_round_corner"
            android:text="서비스 OFF"
            android:layout_marginBottom="10dip"
            android:textColor="#FFFFFF" />
         <Button
            android:id="@+id/btn_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_serviceoff"
            android:background="@drawable/button_round_corner"
            android:text="도움말"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    

</LinearLayout>